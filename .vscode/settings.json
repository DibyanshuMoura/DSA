{
    "files.associations": {
        "iostream": "cpp",
        "ostream": "cpp"
    },
    "code-runner.runInTerminal": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.showExecutionMessage": false,
    "code-runner.executorMap": {
        "c": "gcc -g \"$fullFileName\" -o \"/tmp/$fileNameWithoutExt\" && /tmp/\"$fileNameWithoutExt\" && rm /tmp/\"$fileNameWithoutExt\"",
        "cpp": "g++ -g \"$fullFileName\" -o \"/tmp/$fileNameWithoutExt\" && /tmp/\"$fileNameWithoutExt\" && rm /tmp/\"$fileNameWithoutExt\""
    }
}

