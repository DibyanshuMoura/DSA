{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C File",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": ["-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
            "group": {"kind": "build","isDefault": true},
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build C++ File",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": ["-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
            "group": {"kind": "build","isDefault": false},
            "problemMatcher": ["$gcc"]
        }
    ]
}
